<Window x:Class="WPFLearnApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLearnApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Grid>
        <Button
                x:Name="AddCustBtn"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10" Width="75"
                Click="BtnAddCustomer_Click">
            <StackPanel Orientation="Horizontal">
                <Image Margin="0 0 5 0" Source="/Images/plus.jpg" Height="18"></Image>
                <TextBlock>Add</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
